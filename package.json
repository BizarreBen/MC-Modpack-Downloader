{
  "name": "mcmodpackdownloader",
  "version": "2.2.0",
  "description": "Download minecraft modpacks without the need for the FTB app or Overwolf.",
  "type": "module",
  "scripts": {
    "start": "node --no-warnings --loader ts-node/esm src/main.ts",
    "curseforge": "node --no-warnings --loader ts-node/esm src/main.ts curseforge",
    "modpacks.ch": "node --no-warnings --loader ts-node/esm src/main.ts modpacks.ch",
    "ftb": "node --no-warnings --loader ts-node/esm src/main.ts ftb",
    "local": "node --no-warnings --loader ts-node/esm src/main.ts local",
    "test": "vitest",
    "coverage": "vitest run --coverage.enabled --config test/unit-tests.vitest.config.ts"
  },
  "author": "newo-2001",
  "license": "MIT",
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.3.1",
    "@vitest/coverage-v8": "^2.0.4",
    "memfs": "^4.9.3",
    "msw": "^2.3.1",
    "typemoq": "^2.1.0",
    "vitest": "^2.0.2"
  },
  "dependencies": {
    "@inquirer/confirm": "^3.0.0",
    "@inquirer/input": "^2.0.0",
    "@inquirer/select": "^2.0.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "inversify": "^6.0.1",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.1",
    "reflect-metadata": "^0.1.13",
    "terminal-link": "^3.0.0",
    "ts-command-line-args": "^2.5.1",
    "ts-node": "^10.9.1",
    "winston": "^3.11.0"
  },
  "overrides": {
    "semver": "~7.5.2"
  }
}
